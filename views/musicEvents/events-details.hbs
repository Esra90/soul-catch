<div class="eventDetail-container">
    
    <div class="detail-header">
        <h1>Event Details</h1>
    </div>

    <div class="detail-individual">
        <h3>{{event.name}}'s Info</h3>
        <hr  style="background-color:#1EC9D7; width: 1400px;"/>
        <p>Name of the Event: {{event.name}}</p>
        <p>Description: {{event.description}}</p>
        <p>Location: {{event.location}}</p>
        <p>Datum: {{event.datum}}</p>
        <p>Genre: {{event.genre}}</p>



        {{#if eventIsOwnedByUser }}  
        <a href="/events/{{event._id}}/edit"> Edit </a>
        <form action="/events/{{event._id}}/delete" method="POST">
            <button type="submit">Delete</button>
        </form>
