<div class="userProfile-container">

  <div class="profile-header">
      {{#if userInSession}}
      <h2>Hallo {{userInSession.username}}</h2>
      <p>Welcome to your personal page</p>
  </div>
  <h4>List of the events that you'll join =) </h4>
  <div class="profile-individual">
      {{#each foundEvents}}
      
      <hr  style="background-color:#1EC9D7; width: 1400px;"/>
      <p>Name of the Event: {{name}}</p>
      <p>Description: {{description}}</p>
      <p>Location: {{location}}</p>
      <p>Datum: {{datum}}</p>
      <p>Genre: {{genre}}</p>
      <p>Owner: {{owner.username}}</p>
    
      <hr  style="background-color:#1EC9D7; width: 1400px;"/>
      {{/each}}
  </div>
  {{else}}
    <p>Still no logged in user, sorry!</p>
  {{/if}}

  <a href="/create-events" class="btn btn-outline-dark" id="button-bottom">Add a new Event</a> <br />
</div>